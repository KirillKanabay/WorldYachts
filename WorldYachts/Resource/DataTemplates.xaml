<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:WorldYachts.View"
    xmlns:vaccessory="clr-namespace:WorldYachts.View.AccessoryControlViews"
    xmlns:vcm="clr-namespace:WorldYachts.View.CatalogManagementViews"
    xmlns:veditors="clr-namespace:WorldYachts.View.Editors"
    xmlns:vm="clr-namespace:WorldYachts.ViewModel"
    xmlns:vmaccessory="clr-namespace:WorldYachts.ViewModel.AccessoryControlViewModels"
    xmlns:vmcm="clr-namespace:WorldYachts.ViewModel.BoatManagementViewModels">
    <ResourceDictionary.MergedDictionaries>
        <!--  Основные UC  -->
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <v:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CatalogViewModel}">
                <v:CatalogView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
                <v:OrdersView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
                <v:UserManagementView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AccountSettingsViewModel}">
                <v:AccountSettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AboutProgramViewModel}">
                <v:AboutProgramView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CatalogManagementViewModel}">
                <v:CatalogManagementView />
            </DataTemplate>
        </ResourceDictionary>
        <!--  BoatManagement  -->
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vmcm:BoatEditorViewModel}">
                <vcm:BoatEditorView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:BoatManagementViewModel}">
                <v:BoatManagementView />
            </DataTemplate>
        </ResourceDictionary>
        <!--  AccessoryManagement  -->
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vmaccessory:AccessoryControlViewModel}">
                <vaccessory:AccessoryControlView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vmaccessory:PartnersManagementViewModel}">
                <vaccessory:PartnersManagementView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vmaccessory:PartnerEditorViewModel}">
                <veditors:PartnerEditorView />
            </DataTemplate>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>